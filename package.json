{
	"name": "pygmysizes",
	"version": "0.0.1",
	"description": "lightweight lazyloading",
	"main": "./dist/pygmysizes.js",
	"exports": "./dist/pygmysizes.modern.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"clean": "rm -rf dist/",
		"watch": "microbundle watch src/index.js -f=modern,umd --name=pygmysizes --no-compress",
		"build:min": "microbundle src/index.js -f=modern,umd --name=pygmysizes",
		"build:main": "microbundle src/index.js -f=modern,umd --name=pygmysizes --no-compress",
		"bundle": "npm-run-all clean build:*"
	},
	"author": "frankie-tech",
	"license": "MIT",
	"devDependencies": {
		"husky": "^4.3.7",
		"microbundle": "^0.13.0",
		"npm-run-all": "^4.1.5"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run bundle"
		}
	}
}
